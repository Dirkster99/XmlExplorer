<Window x:Class="XmlExplorerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behav="clr-namespace:XmlExplorerDemo.Behaviors"
        
        xmlns:ctrl="clr-namespace:XmlExplorerLib;assembly=XmlExplorerLib"
        xmlns:conv="clr-namespace:XmlExplorerLib.Converters;assembly=XmlExplorerLib"
        xmlns:views="clr-namespace:XmlExplorerLib.Templates;assembly=XmlExplorerLib"

        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="925"
        FontSize="16"

        behav:DialogCloser.DialogResult="{Binding DialogCloseResult}" 
        >
    <Window.InputBindings>
        <KeyBinding Key="F4" Modifiers="Alt" Command="{Binding ApplicationExitCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.Resources>
            <conv:InvertedBooleanToVisibilityConverter x:Key="invertedBooleanToVisibilityConverter" />
            <!--conv:XPathNavigatorItemsConverter x:Key="xPathNavigatorItemsConverter" /-->
            <views:XPathNodeTypeDataTemplateSelector x:Key="xPathNodeTypeDataTemplateSelector" />
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Load Xml File"
                          Command="{Binding LoadXMLFileCommand}" />
                <MenuItem Header="Save As..."
                          Command="{Binding SaveAsXmlFileCommand}" />
                <Separator/>
                <MenuItem Header="Exit"
                          Command="{Binding ApplicationExitCommand}"/>
            </MenuItem>

            <MenuItem Header="View">
                <MenuItem Header="Collapse all nodes"
                          Command="{Binding CollapseAllNodesCommand}" />

                <MenuItem Header="Expand all nodes"
                          Command="{Binding ExpandAllNodesCommand}"
                          />
            </MenuItem>
        </Menu>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ctrl:XmlExplorerView Grid.Column="0"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling"
            
                ItemsSource="{Binding XmlTree.XPathRoot}"
                ItemTemplateSelector="{StaticResource xPathNodeTypeDataTemplateSelector}"
                Visibility="{Binding ElementName=TreeView, Path=IsLoading, Converter={StaticResource invertedBooleanToVisibilityConverter}}"
            />
        </Grid>

        <GridSplitter Grid.Row="2" Height="10"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      />

        <ListBox
            Grid.Row="3"
            ItemsSource="{Binding XmlTree.Errors}"
            >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Description}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
